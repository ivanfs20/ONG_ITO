<?php
$msg = isset($_GET['msg']) ? $_GET['msg'] : '';
$img = "../view/media/sdislike.png"; // Default image for error
$text = "OcurriÃ³ un error";

if ($msg === "resivido") {
    $img = "../view/media/paceptado.png";
    $text = "Confirmado que el material ha sido recibido.";
} elseif ($msg === "noresivido") {
    $img = "../view/media/pnollegado.png";
    $text = "El material no ha sido recibido.";
} 
?>

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>PopRegistrarse</title>
    <style>
        body {
            margin: 0;
            font-family: sans-serif;
        }
    </style>
    <script src="js/pop.js"></script>
</head>

<body>
    <script>
        window.addEventListener('DOMContentLoaded', function () {
            mostrarMensaje({
                mensaje: "<?php echo addslashes($text); ?>",
                redireccion: "gestionmaterial.php",
                imagen: "<?php echo $img; ?>"
            });
        });
    </script>
</body>

</html>